<Application
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="FolderSize.WPF.App"
	StartupUri="MainForm.xaml">
	<Application.Resources>
      <LinearGradientBrush x:Key="FolderGradient" EndPoint="0,200" StartPoint="0,0" MappingMode="Absolute">
         <GradientStop Color="#FF7BAAFF" Offset="0"/>
         <GradientStop Color="#FF71A1FB" Offset="0.1"/>
         <GradientStop Color="#FF4F82F0" Offset="0.5"/>
         <GradientStop Color="#FF38447D" Offset="1"/>
      </LinearGradientBrush>
      <LinearGradientBrush x:Key="WindowGradient" EndPoint="0,600" StartPoint="0,0" MappingMode="Absolute">
         <GradientStop Color="White"/>
         <GradientStop Color="#FFBBBBBB" Offset="1"/>
      </LinearGradientBrush>
   </Application.Resources>
</Application>